<h1>New Place</h1>

<%= form_with scope: :place, url: places_path, local: true do |form| %>
    <% if @place.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@place.errors.count, "error") %> prohibited this article from being saved:
            </h2>
            <ul>
                <% @place.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= form.label :title %><br>
        <%= form.text_field :title%>
    </p>

    <p>
        <%= form.label :text %><br>
        <%= form.text_area :text %>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>

<%= link_to 'Back', places_path %>